---
name: Home
cover: blurred.jpg
priority: 1.0
---

%header.main-header{cover}
  = partial :navigation
  .vertical
    #splash.main-header-content.inner

      %h1.page-title= site_title
      %h2.page-description#slogan= site_description

      - if open_signups?
        = partial :signup
      - elsif live_event?
        <iframe id="stream" width="560" height="315" src="#{data.site.live_event_url}" frameborder="0" allowfullscreen></iframe>
      - else
        %h2.page-description#signups-closed
          check back on monday...

  %a.scroll-down.icon-arrow-left{href: '#content', data: {offset: '-45'}}
    %span.hidden Scroll Down

%main#content.content{role: :main}
  = partial :transmission
